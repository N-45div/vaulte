{
    "version": "1",
    "name": "vaulte",
    "abis": {
        "router": {
            "path": "abis/router.json"
        }
    },
    "chains": ["ethena-testnet"],
    "instances": [
        {
            "abi": "router",
            "address": "0x595CeE49356f6260D9D3290f7C052183260314ef",
            "chain": "ethena-testnet",
            "startBlock": 1539807,
            "enrich": {
                "handlers": {
                    "Subscription(address,address,uint256,uint256)": {
                        "entities": {
                            "Subscription": {
                                "userAccount": "event.params.userAccount.toHexString()",
                                "merchantAccount": "event.params.merchantAccount.toHexString()",
                                "tier": "event.params.tier",
                                "subscriptionTime": "event.params.subTime",
                                "timestamp": "event.block.timestamp"
                            }
                        }
                    },
                    "SubscriptionPayment(address,address,uint256,uint256)": {
                        "entities": {
                            "Payment": {
                                "userAccount": "event.params.userAccount.toHexString()",
                                "merchantAccount": "event.params.merchantAccount.toHexString()",
                                "amount": "event.params.paymentAmount",
                                "paymentTime": "event.params.paymentTime",
                                "timestamp": "event.block.timestamp"
                            }
                        }
                    },
                    "LoanDisbursed(address,address,uint256,uint8)": {
                        "entities": {
                            "Loan": {
                                "investorAccount": "event.params.investorAccount.toHexString()",
                                "merchantAccount": "event.params.merchantAccount.toHexString()",
                                "amount": "event.params.amount",
                                "loanCategory": "BigInt.fromI32(event.params.loanCategory)",
                                "timestamp": "event.block.timestamp"
                            }
                        }
                    }
                }
            }
        }
    ]
}